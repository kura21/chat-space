.left-contents
  .left__header
    .left__header__name
      %p
        = current_user.name
    %ul.left-header__iconlist
      %li.list__icon<>
        = link_to new_group_path ,class: "icon-new" do
          = fa_icon "edit", class: "icon__new--btn"
      %li.list__icon<>
        = link_to edit_user_path(current_user),class: "icon-edit" do
          = fa_icon "cog", class: "icon__new--btn"
  .left__list
    - current_user.groups.each do |group|
    .left-list__item
      = link_to group_messages_path(group) do
        .room-name
          = group.name
        .room-info
          = group.show_last_message