.left-contents
  .left__header
    .left-header__name
      %p
        = current_user.name
    %ul.left-header__iconlist
      %li.list__icon<>
        = link_to new_group_path, class: "icon-new" do
          = fa_icon "edit", class: "icon__new--btn"
      %li.list__icon<>
        = link_to edit_user_path(current_user), class: "icon-edit" do
          = fa_icon "cog", class: "icon__btn--edit"
  .left__list
    - current_user.groups.each do |group|
      .left-list__item
      = link_to group_messages_path(group) do
        .room-name
          = group.name
        .room-info
          = group.show_last_message
.main-contents  
  .main__header
    .header__info
      .info__name
        %p  = curren_user.name
      .info__memberlist
        %p  Member:  = group.show_last_message
    .header__btn
      = link_to "Edit", "" , class: "edit-btn"
  .main__messages
  .main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
    .input__box
      = f.text_field :text, placeholder: "type a text", class: "message__form"
      = f.label :image, class: "form__upload" do
        = fa_icon 'picture-o', class: 'icon'
        = f.file_field :image, id: "message_image"
    = f.submit value: "Send", class: "send__btn"